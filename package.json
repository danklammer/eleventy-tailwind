{
  "type": "module",
  "scripts": {
    "build": "npm-run-all --sequential clean build:html",
    "build:css": "npx @tailwindcss/cli -i ./src/_includes/css/styles.css -o ./_site/styles.css --minify",
    "build:html": "ELEVENTY_ENV=production eleventy",
    "serve": "npm-run-all --parallel serve:css serve:html",
    "serve:css": "npx @tailwindcss/cli -i ./src/_includes/css/styles.css -o ./_site/styles.css --watch",
    "serve:html": "eleventy --serve",
    "clean": "rm -rf _site"
  },
  "dependencies": {
    "@11ty/eleventy": "^3",
    "@tailwindcss/cli": "^4",
    "html-minifier-terser": "^7",
    "luxon": "^3",
    "npm-run-all": "^4",
    "terser": "^5"
  }
}

